<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceDelUsado.UI.MainPage"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="Auto, Auto, *, Auto">

        <!-- Barra azul con texto Inicio -->
        <Grid BackgroundColor="#007AFF" Padding="20" Grid.Row="0">
            <Label Text="Inicio"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Start"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Botones horizontales (categorías superiores) -->
        <Grid ColumnSpacing="6" Padding="20,10" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Text="Auto"
                    BackgroundColor="#007AFF"
                    TextColor="White"
                    CornerRadius="15"
                    Grid.Column="0"
                    HeightRequest="40"
                    FontSize="12"
                    Clicked="OnVerVehiculosClicked"/>

            <Button Text="M.Trad"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    CornerRadius="15"
                    Grid.Column="1"
                    HeightRequest="40"
                    FontSize="11" />

            <Button Text="M.Eléc"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    CornerRadius="15"
                    Grid.Column="2"
                    HeightRequest="40"
                    FontSize="11" />

            <Button Text="B.Trad"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    CornerRadius="15"
                    Grid.Column="3"
                    HeightRequest="40"
                    FontSize="11" />

            <Button Text="B.Eléc"
                    BackgroundColor="#E0E0E0"
                    TextColor="Black"
                    CornerRadius="15"
                    Grid.Column="4"
                    HeightRequest="40"
                    FontSize="11" />
        </Grid>

        <!-- Imagen centrada en pantalla -->
        <Grid Grid.Row="2"
              HorizontalOptions="Center"
              VerticalOptions="Center">
            <Image Source="imagenecommercedelusado.png"
                   Aspect="AspectFit"
                   WidthRequest="360"
                   HeightRequest="360"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Botones inferiores con ícono y texto -->
        <Grid Grid.Row="3" Padding="10" ColumnSpacing="6">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0" HorizontalOptions="Center">
                <ImageButton Source="house.png"
                             BackgroundColor="Transparent"
                             HeightRequest="24"
                             WidthRequest="24" />
                <Label Text="Inicio" FontSize="10" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1" HorizontalOptions="Center">
                <ImageButton Source="automovil.png
                             "
                             BackgroundColor="Transparent"
                             HeightRequest="24"
                             WidthRequest="24" />
                <Label Text="Auto" FontSize="10" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2" HorizontalOptions="Center">
                <ImageButton Source="mototradicional.png"
                             BackgroundColor="Transparent"
                             HeightRequest="24"
                             WidthRequest="24" />
                <Label Text="M. Trad" FontSize="10" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="3" HorizontalOptions="Center">
                <ImageButton Source="motoelectrica.png"
                             BackgroundColor="Transparent"
                             HeightRequest="24"
                             WidthRequest="24" />
                <Label Text="M. Eléc" FontSize="10" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="4" HorizontalOptions="Center">
                <ImageButton Source="bicielectrica.png"
                             BackgroundColor="Transparent"
                             HeightRequest="24"
                             WidthRequest="24" />
                <Label Text="B. Eléc" FontSize="10" HorizontalTextAlignment="Center" />
            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>