<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceDelUsado.UI.MainPage"
             Title="Inicio"
             BackgroundColor="White">

    <VerticalStackLayout Padding="10">

        <Label Text="Inicio"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Start"
               TextColor="#0078D7" />

        <ScrollView Orientation="Horizontal"
                    Margin="0,10,0,10"
                    HorizontalScrollBarVisibility="Never">
            <HorizontalStackLayout Spacing="10">

                <Button Text="Auto"
                        BackgroundColor="#0078D7"
                        TextColor="White"
                        CornerRadius="15"
                        Padding="10,5" 
                        Clicked="OnVerVehiculosClicked"/>

                <Button Text="M. Trad"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="15"
                        Padding="10,5" />

                <Button Text="M. Eléc"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="15"
                        Padding="10,5" />

                <Button Text="B. Trad"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="15"
                        Padding="10,5" />

                <Button Text="B. Eléc"
                        BackgroundColor="#E0E0E0"
                        TextColor="Black"
                        CornerRadius="15"
                        Padding="10,5" />
            </HorizontalStackLayout>
        </ScrollView>

        <Grid HeightRequest="300" VerticalOptions="CenterAndExpand">
            <Image Source="icon_placeholder.png"
                   WidthRequest="120"
                   HeightRequest="120"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />
        </Grid>

        <Button Text="Ver Vehículos"
                Clicked="OnVerVehiculosClicked"
                BackgroundColor="#28A745"
                TextColor="White"
                CornerRadius="10"
                Padding="10"
                Margin="0,20,0,0"
                HorizontalOptions="Center" />

    </VerticalStackLayout>
</ContentPage>