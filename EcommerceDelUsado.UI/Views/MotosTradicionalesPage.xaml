<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="EcommerceDelUsado.UI.Views.MotosTradicionalesPage"
    Title="Motos Tradicionales"
    BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="25">

            <Label Text="Listado de Motos"
                   FontSize="26"
                   FontAttributes="Bold"
                   TextColor="#0078D7"
                   HorizontalOptions="Center" />

            <!-- Ejemplo Ducati1 -->
            <Label Text="Ducati" FontSize="20" FontAttributes="Bold" />
            <Frame CornerRadius="10" HasShadow="True" Padding="5">
                <Image Source="mototradducati1.png" HeightRequest="180" Aspect="AspectFit"/>
            </Frame>

            <!-- Ejemplo Yamaha1 -->
            <Label Text="Yamaha" FontSize="20" FontAttributes="Bold" />
            <Frame CornerRadius="10" HasShadow="True" Padding="5">
                <Image Source="mototradyamaha1.png" HeightRequest="150" Aspect="AspectFit"/>
            </Frame>
            <!-- Puedes continuar aquí con más imágenes como antes -->

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
