<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceDelUsado.UI.Views.DetalleVehiculoPage"
             Title="Detalle del Vehículo Escogido"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- FRAME PRINCIPAL -->
            <Frame BorderColor="LightGray"
                   CornerRadius="15"
                   HasShadow="True"
                   Padding="20"
                   BackgroundColor="#F9F9F9"
                   HorizontalOptions="Center"
                   WidthRequest="380">

                <VerticalStackLayout Spacing="15"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center">

                    <!-- TITULOS -->
                    <Label Text="{Binding Marca}"
                           FontSize="26"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />

                    <Label Text="{Binding Modelo}"
                           FontSize="20"
                           FontAttributes="Italic"
                           TextColor="Gray"
                           HorizontalOptions="Center" />

                    <!-- IMAGEN DEL VEHÍCULO -->
                    <Image Source="{Binding Imagen2}"
                           Aspect="AspectFit"
                           HeightRequest="240"
                           HorizontalOptions="Center"
                           VerticalOptions="Center" />

                    <!-- CARACTERÍSTICAS DEL VEHICULO -->
                    <StackLayout HorizontalOptions="Center">
                        <Grid RowSpacing="8"
                            ColumnDefinitions="100,*"
                            RowDefinitions="Auto,Auto,Auto,Auto,Auto">

                            <Label Text="Año:" FontAttributes="Bold" Grid.Row="0" Grid.Column="0" />
                            <Label Text="{Binding Año}" Grid.Row="0" Grid.Column="1" Margin="2,0,0,0" />

                            <Label Text="Color:" FontAttributes="Bold" Grid.Row="1" Grid.Column="0" />
                            <Label Text="{Binding Color}" Grid.Row="1" Grid.Column="1" Margin="2,0,0,0" />

                            <Label Text="Kilometraje:" FontAttributes="Bold" Grid.Row="2" Grid.Column="0" />
                            <Label Text="{Binding Kilometraje, StringFormat='{0:N0} km'}" Grid.Row="2" Grid.Column="1" Margin="2,0,0,0" />


                            <Label Text="Transmisión:" FontAttributes="Bold" Grid.Row="3" Grid.Column="0" />
                            <Label Text="{Binding Transmision}" Grid.Row="3" Grid.Column="1" Margin="2,0,0,0" />

                            <Label Text="Precio:" FontAttributes="Bold" Grid.Row="4" Grid.Column="0" />
                            <Label Text="{Binding Precio, StringFormat='{0:C0}'}" Grid.Row="4" Grid.Column="1" Margin="2,0,0,0" />
                        </Grid>
                    </StackLayout>




                    <!-- DESCRIPCIÓN -->
                    <Label Text="Descripción:"
                           FontAttributes="Bold"
                           Margin="0,10,0,0"
                           HorizontalOptions="Center" />

                    <Label Text="{Binding Descripcion}"
                           LineBreakMode="WordWrap"
                           FontSize="14"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
