<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EcommerceDelUsado.UI.Views.MotoTradPage"
             Title=""
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="10" Spacing="20">
            <Label Text="Motos Disponibles"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <CollectionView ItemsSource="{Binding Vehiculos}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame CornerRadius="10" Padding="10" Margin="5" HasShadow="True" BackgroundColor="White">
                            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto" RowSpacing="5">

                                <!-- Imagen 1 -->
                                <Image Grid.Column="0"
                                       Source="{Binding Imagen1}"
                                       Aspect="AspectFit"
                                       HeightRequest="100"
                                       Margin="5" />

                                <!-- Imagen 2 -->
                                <Image Grid.Column="1"
                                       Source="{Binding Imagen2}"
                                       Aspect="AspectFit"
                                       HeightRequest="100"
                                       Margin="5" />

                                <!-- Detalles -->
                                <StackLayout Grid.ColumnSpan="2"
                                             Orientation="Vertical"
                                             Margin="5"
                                             Grid.Row="1">
                                    <HorizontalStackLayout Spacing="5"> <!-- Separación horizontal entre Label y Binding -->
                                        <Label Text="Marca:" FontAttributes="Bold" />
                                        <Label Text="{Binding Marca}" FontAttributes="Bold" FontSize="16" />
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="Modelo:" FontAttributes="Bold" />
                                        <Label Text="{Binding Modelo}" FontSize="14" />
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="Año:" FontAttributes="Bold" />
                                        <Label Text="{Binding Año}" FontSize="14" />
                                    </HorizontalStackLayout>

                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="Precio:" FontAttributes="Bold" />
                                        <Label Text="{Binding Precio, StringFormat='{0:C}'}" FontSize="14" />
                                    </HorizontalStackLayout>
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
